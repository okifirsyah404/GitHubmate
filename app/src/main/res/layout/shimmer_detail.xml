<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/neutral_10"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/logo_dimen"
        android:layout_height="@dimen/logo_dimen"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/skeleton_circle" />

    <View
        android:layout_width="120dp"
        android:layout_height="@dimen/font_xmedium"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@drawable/skeleton" />

    <View
        android:layout_width="120dp"
        android:layout_height="@dimen/font_small"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@drawable/skeleton" />

    <View
        android:layout_width="120dp"
        android:layout_height="@dimen/font_medium"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/skeleton" />

    <View
        android:layout_width="120dp"
        android:layout_height="@dimen/font_medium"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@drawable/skeleton" />


</LinearLayout>
